<Window x:Class="prog6221poe3.ScaleRecipeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Scale Recipe" Height="200" Width="300">
    <Grid>
        <Label Content="Scaling Factor:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10"/>
        <TextBox Name="ScalingFactorTextBox" HorizontalAlignment="Left" Height="23" Margin="120,10,0,0" VerticalAlignment="Top" Width="150"/>
        <Button Content="Scale" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="10,50,0,0" Click="Scale_Click"/>
        <Button Content="Cancel" HorizontalAlignment="Right" VerticalAlignment="Top" Width="75" Margin="0,50,10,0" Click="Cancel_Click"/>
    </Grid>
</Window>

